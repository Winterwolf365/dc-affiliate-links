{
  "manifest_version": 3,
  "name": "Depositum Custodi Affiliate Links",
  "version": "2.0",
  "description": "Voegt automatisch affiliate codes toe aan bol.com, amazon.nl en coolblue.nl, voor de studentenverenging Deposito Custodi.",
  "permissions": [
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess"
  ],
  "host_permissions": [
    "https://www.bol.com/*",
    "https://www.amazon.nl/*",
    "https://www.coolblue.nl/*"
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  "action": {
    "default_icon": {
      "16": "media/dc_logo_wapen.png",
      "48": "media/dc_logo_wapen.png",
      "128": "media/dc_logo_wapen.png"
    },
    "default_title": "Depositum Custodi",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "media/dc_logo_wapen.png",
    "48": "media/dc_logo_wapen.png",
    "128": "media/dc_logo_wapen.png"
  }
}
